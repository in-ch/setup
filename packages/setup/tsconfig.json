{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "allowImportingTsExtensions": true,
    "declaration": true,
    "noEmit": true,
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "lib/*": ["src/lib/*"],
      "const/": ["src/const/*"],
      "commands/": ["src/commands/*"],
      "utils/": ["src/utils/*"],
      "src/": ["src/*"]
    }
  }
}